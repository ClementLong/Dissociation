<audio src="{{ app.request.basepath }}/media/5.mp3"></audio>
<script>
    // Song
    var player = {};

    player.video = document.querySelector('audio');

    // Keyshort

    window.addEventListener('keydown',function(e) {
        if(e.keyCode == 32) {
            e.preventDefault();
            if (player.video.paused)
                player.video.play();
            else
                player.video.pause();
        }
    }, false);

    player.video.volume = 1;

    window.addEventListener('keydown',function(e) {
        if(e.keyCode == 77) {
            e.preventDefault();
            if(player.video.muted || player.video.volume == 0)
                player.video.volume = 0.5;
            else
                player.video.volume = 0;
        }
    }, false);

    window.setTimeout(function(){
        player.video.play();
    }, 200);
</script>


